<resources>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"/>

    <style name="StarStyle">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/text_color_base</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTop">@drawable/type40</item>
        <item name="android:text">error</item>
    </style>
	<style name="MainTextStyle">
		<item name="android:background">@color/background_group</item>
		<item name="android:textColor">@color/text_color_base</item>
		<item name="android:textSize">20sp</item>
		<item name="android:gravity">center</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:padding">5dp</item>
		<item name="android:layout_gravity">center</item>
	</style>
	<style name="MainTextStyle.Small">
		<item name="android:textSize">15sp</item>
	</style>
	<style name="MainTextStyle.Smaller">
		<item name="android:textSize">10sp</item>
	</style>

	<style name="MainButtonStyle">
		<item name="android:textColor">@color/text_color_base</item>
		<item name="android:textSize">20sp</item>
		<item name="android:gravity">center</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:padding">5dp</item>
		<item name="android:layout_gravity">center</item>
	</style>
	<style name="MainButtonStyle.Small">
		<item name="android:textSize">15sp</item>
		<item name="android:layout_margin">0dp</item>
		<item name="android:padding">0dp</item>
	</style>
	<style name="MainButtonStyle.Medium">
		<item name="android:textSize">15sp</item>
	</style>

</resources>
